@model Evento

<h2>Criar Novo Evento</h2>

<form asp-action="Create">
	<div class="form-group">
		<label for="Nome">Nome do Evento</label>
		<input asp-for="Nome" class="form-control" />
		<span asp-validation-for="Nome" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label for="Descricao">Descrição</label>
		<input asp-for="Descricao" class="form-control" />
		<span asp-validation-for="Descricao" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label for="QuantidadeMaximaInscricoes">Descrição</label>
		<input asp-for="QuantidadeMaximaInscricoes" class="form-control"  type="number"/>
		<span asp-validation-for="QuantidadeMaximaInscricoes" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label for="DataInicio">Data do Evento</label>
		<input asp-for="DataInicio" class="form-control" type="date" />
		<span asp-validation-for="DataInicio" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Criar</button>
</form>
