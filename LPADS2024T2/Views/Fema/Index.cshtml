}

<h2>Seja bem vindo à Fema</h2>

<div class="card" style="width: 18rem;">
    <a asp-area="" asp-controller="Fema" asp-action="ADS">
      <div class="card-body">
        <h5 class="card-title">@Model.Descricao</h5>
            <p class="card-text">Conheça mais sobre o curso.</p>
      </div>
   </a>
</div>

<div class="card" style="width: 18rem;">
    <a asp-area="" asp-controller="Fema" asp-action="BCC">
        <div class="card-body">
            <h5 class="card-title">@bcc.Descricao</h5>
            <p class="card-text">Conheça mais sobre o curso.</p>
        </div>
    </a>
</div>


